{
    "manifest_version": 2,
    "name": "NCU Helper",
    "author": "Sean Wu (2018 NCU CSIE)",
    "version": "2.1.0",
    "description": "Add some features and change the design of NCU webpages in more modern style.",
    "icons": {
        "128": "images/icon_128.png"
    },
    "background": {
        "scripts": [
            "lib/jquery-3.3.1.min.js",
            "lib/moment.js",
            "scripts/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "128": "images/icon_128.png"
        },
        "default_title": "NCU Helper",
        "default_popup": "html/popup.html"
    },
    "content_scripts": [{
            "matches": ["https://lms.ncu.edu.tw/*"],
            "exclude_matches": ["https://lms.ncu.edu.tw/rss/*"],
            "js": ["scripts/lms.switch.js"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["https://lms.ncu.edu.tw/*"],
            "exclude_matches": ["https://lms.ncu.edu.tw/rss/*"],
            "js": ["scripts/lms.js"],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/*"],
            "exclude_matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "js": ["scripts/score-inquiries.switch.js"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/*"],
            "exclude_matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "js": [
                "lib/jquery-3.3.1.min.js",
                "scripts/score-inquiries.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "js": ["scripts/score-inquiries-header.switch.js"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "js": ["scripts/score-inquiries-header.js"],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/grad/index.php*"],
            "js": ["scripts/graduate.switch.js"],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://portal.ncu.edu.tw/",
                "https://portal.ncu.edu.tw/chgpasswd*",
                "https://portal.ncu.edu.tw/login*",
                "https://portal.ncu.edu.tw/system/147*",
                "https://portal.ncu.edu.tw/system/162*"
            ],
            "js": ["scripts/portal.switch.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "alarms"
    ],
    "web_accessible_resources": ["images/*", "stylesheets/*.css"],
    "sandbox": {
        "pages": ["html/netflow.html"]
    }
}
