{
    "manifest_version": 2,
    "name": "NCU Helper",
    "author": "Sean Wu (2018 CSIE)",
    "version": "1.0",
    "version_name": "first public",
    "description": "Add some features and change the design of NCU webpages in more modern style.",
    "icons": {
        "128": "images/icon_128.png"
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "browser_action": {
        "default_icon": {
            "128": "images/icon_128.png"
        },
        "default_title": "NCU Helper"
    },
    "content_scripts": [{
            "matches": ["https://lms.ncu.edu.tw/*"],
            "exclude_matches": ["https://lms.ncu.edu.tw/rss/*"],
            "css": ["stylesheets/lms.css"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["https://lms.ncu.edu.tw/*"],
            "exclude_matches": ["https://lms.ncu.edu.tw/rss/*"],
            "js": ["scripts/lms.js"],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/*"],
            "exclude_matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "css": ["stylesheets/score_inquiries.css"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/*"],
            "exclude_matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "js": [
                "scripts/jquery-3.3.1.min.js",
                "scripts/score_inquiries.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "css": ["stylesheets/score_inquiries_header.css"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/ScoreInquiries/student_top.php*"],
            "js": ["scripts/score_inquiries_header.js"],
            "all_frames": true,
            "run_at": "document_end"
        },
        {
            "matches": ["https://cis.ncu.edu.tw/grad/index.php*"],
            "css": ["stylesheets/graduate.css"],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://portal.ncu.edu.tw/",
                "https://portal.ncu.edu.tw/chgpasswd*",
                "https://portal.ncu.edu.tw/login*",
                "https://portal.ncu.edu.tw/system/147*",
                "https://portal.ncu.edu.tw/system/162*"
            ],
            "css": ["stylesheets/portal.css"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking"
    ],
    "web_accessible_resources": ["images/*"]
}