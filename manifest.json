{
    "manifest_version": 2,
    "name": "NCU LMS Sucks",
    "author": "Sean Wu (2018 CSIE)",
    "version": "1.0",
    "version_name": "alpha test",
    "description": "Block the logout timer and change the design of NCU LMS webpage in more modern style.",
    "icons": {
        "128": "images/icon_128.png"
    },
    "browser_action": {
        "default_icon": {
            "128": "images/icon_128.png"
        },
        "default_title": "YEAH!",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "content_scripts": [{
            "matches": ["https://lms.ncu.edu.tw/*"],
            "exclude_matches": ["https://lms.ncu.edu.tw/rss/*"],
            "js": ["scripts/document_start.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["https://lms.ncu.edu.tw/*"],
            "exclude_matches": ["https://lms.ncu.edu.tw/rss/*"],
            "js": ["scripts/document_end.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": ["tabs", "webRequest", "webRequestBlocking", "*://lms.ncu.edu.tw/*"],
    "web_accessible_resources": ["images/NCULogo.svg", "main.css"]
}